var tweets = <%= raw @tweets.to_json %>;
var len = tweets.length;
$("#chat").empty();
for(var i=0; i<len; i++){
	var name = tweets[i].name;
	var emotion = tweets[i].emotion;
	var content = tweets[i].content;
	var date = tweets[i].created_at.substr(0, 19).replace("T", " ");
	var count = tweets[i].id;
	var sushi_num;
	switch (emotion){
	case 1:
		sushi_num = "31";
		break;
	case -1:
		sushi_num = "36";
		break;
	}
	var img = '<img src="http://www.showwin.asia/contents/sushiyuki_pack2/sushiyuki_'+sushi_num+'.png" alt="User Avatar" class="img-circle" width="50" height="50" />';
	var span = '<span class="chat-img pull-left">'+img+'</span>';

	var div_header = '<div class="header"><p id="tl_name"><b>'+name+'</b></p>'+
		'<small class="pull-right text-muted"><p id="tl_time">'+count+'<br>'+date+'</p></small><div>';
	var strong = '<strong class="primary-font" id="tl_content_jp">'+content+'</strong>';
	var div_body = '<div class="chat-body clearfix">'+div_header+strong+'</div>';
	$("#chat").prepend($('<li class="left clearfix">').append(span).append(div_body));
}