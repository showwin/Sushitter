<div id="wrapper">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<h1>Sushitter</h1>
			<div class="panel-heading">
				<%= form_for @tweet, remote: true do |f| %>
					<div class="row">
						<div class="col-md-4">
							<%= f.select(:name, @dic_owners.map{|d| [d.owner, d.owner]}, {}, {:class => "form-control input-sm"}) %>
						</div>
						<div class="col-md-4">
							<%= f.select(:emotion, [["Auto", "auto"], ["Positive", "1"], ["Negative", "-1"]], {}, {:class => "form-control input-sm"}) %>
						</div>
						<div class="col-md-1"></div>
						<div class="col-md-2">
							<a class="btn btn-success btn-sm" data-toggle="modal" data-target="#create_new_dictionary">Make a New Dictionary</a>
						</div>
						<div class="col-md-1"><a class="btn btn-success btn-sm" data-toggle="modal" data-target="#create_my_dictionary">test</a></div>
					</div><p></p>
					<div class="input-group">
						<%= f.text_field :content, :class => "form-control input-sm", :placeholder => "Type your message here" %>
						<span class="input-group-btn">
							<%= f.submit "Tweet", :class => "btn btn-info btn-sm"%>
						</span>
					</div>
				<% end %>
			</div>
			<div class="chat-panel panel panel-default">
				<div class="panel-heading">
					<i class="fa fa-comments fa-fw"></i>Timeline
					<div class="btn-group pull-right">
						<%= form_tag get_tweets_path, remote: true do %>
						show tweets from
							<%= text_field_tag :from, params[:from] ,:size => 1 %> to
							<%= text_field_tag :to, params[:to] ,:size => 1 %>
							<span class="getTweets">
								<%= submit_tag "GET", :class => "btn btn-info btn-sm", :id => "getTweets" %>
							</span>
						<% end %>
					</div>
				</div>
				<div class="panel-body">
					<ul class="chat" id="chat">
					</ul>
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel .chat-panel -->
		</div>
	</div>
</div>

<!-- for modal -->
<div class="modal fade" id="create_new_dictionary" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<%= form_tag( create_dictionary_path, {multipart: true, remote: true}) do %>
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel">Make a New Dictionary</h4>
			</div>
			
			<div class="modal-body">
					You can create your own dictionary.<br>
					This will take 2~3 minutes.<p></p>
					<%= text_field_tag :owner, params[:owner], :class => "form-control", :placeholder => "Type your name here" %>
					<%= file_field_tag :csv_file %>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">Cancel</button>
				<%= submit_tag "Create", :class => "btn btn-info", :id => "create_dictionary"%>
			</div>
			<% end %>
		</div>
	</div>
</div>

<div class="modal fade" id="create_my_dictionary" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<%= form_tag( create_my_dictionary_path, {multipart: true, remote: true}) do %>
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel">Make a New Dictionary</h4>
			</div>
			
			<div class="modal-body">
					You can create your own dictionary.<br>
					This will take 2~3 minutes.<p></p>
					<%= text_field_tag :owner, params[:owner], :class => "form-control", :placeholder => "Type your name here" %>
					<%= file_field_tag :file %>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">Cancel</button>
				<%= submit_tag "Create", :class => "btn btn-info"%>
			</div>
			<% end %>
		</div>
	</div>
</div>

<!-- making dictionary -->
<div class="modal fade" id="making" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-body">
				<h4>
					We are creating dictionary for you ... 
					&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					Please wait a few minutes.
				</h4>
			</div>
		</div>
	</div>
</div>

<!-- making dictionary -->
<div class="modal fade" id="finish" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-body">
				<h4>
					Everything is ready !!!!
				</h4>
			</div>
		</div>
	</div>
</div>